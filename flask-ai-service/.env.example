# MediScan Flask AI Service Configuration
# Copy this to .env for local development

# Service Configuration
PORT=5001
FLASK_ENV=development
AI_SERVICE_SECRET=mediscan-dev-secret-2024

# File Processing
TEMP_DIR=/tmp/mediscan
MAX_PROCESSING_TIME=300
OCR_DPI=300
OCR_LANGUAGE=eng

# Model Configuration
MODEL_CACHE_DIR=./models

# Logging
LOG_LEVEL=INFO
LOG_FILE=mediscan_ai.log

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_CONFIG=--oem 3 --psm 6

# Security
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Performance
WORKERS=4
TIMEOUT=300